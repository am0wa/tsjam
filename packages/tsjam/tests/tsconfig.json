{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // important: jest crashes to resolve module: NodeNext!
    "moduleResolution": "nodenext",
    "types": ["node", "jest"],
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "isolatedModules": true,
    "allowJs": true
  }
}
